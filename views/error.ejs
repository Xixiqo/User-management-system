<%- include('partials/header', { title: 'Error - Something Went Wrong' }) %>

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card shadow">
            <div class="card-body p-5">
                <i class="bi bi-exclamation-triangle display-1 text-danger mb-4"></i>
                <h1 class="display-6 text-danger mb-3">Oops!</h1>
                <h4 class="mb-3">Something went wrong</h4>
                <p class="text-muted mb-4">
                    <%= error || 'An unexpected error occurred. Please try again later.' %>
                </p>
                <div class="d-flex gap-2 justify-content-center">
                    <a href="/" class="btn btn-primary btn-custom">
                        <i class="bi bi-house me-2"></i>
                        Back to Home
                    </a>
                    <button onclick="window.history.back()" class="btn btn-outline-secondary btn-custom">
                        <i class="bi bi-arrow-left me-2"></i>
                        Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
